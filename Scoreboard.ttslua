function onLoad(saveString)
    if not (saveString == '') then
        local save = JSON.decode(saveString)
        passHash = save['pH']
        deserialize(save['dbStr'])
        fWins = save['fw']
        lWins = save['lw']
        lastAMID = save["amid"]
        saveNames = save['sn']
        saveStorage = save['dbs'] or saveStorage
        dbOption = save['dbo'] or dbOption
    end
    roles = Global.getTable('roles')
    recordCheck = false
    startTime = os.time()
    refreshStart()
    moveBoard()

    for _, v in pairs(Player.getPlayers()) do
      if(v.seated) then
        params = {}
        params["SteamID"] = v.steam_id
        params["PlayerName"] = v.steam_name
        registerPlayer(params)
      end
    end

    startAnnTimer()
end

function onSave()
    local save = {}
    save['pH'] = passHash
    save['dbStr'] = serialize()
    save['fw'] = fWins
    save['lw'] = lWins
    save['sn'] = saveNames
    save['dbs'] = saveStorage
    save['dbo'] = dbOption
    save['amid'] = lastAMID
    local saveString = JSON.encode(save)
    return saveString
end

function onDestroy()
    Timer.destroy(self.getGUID())
end

function onPlayerChangeColor(player_color)
    local started = Global.getVar('started')
    if state == 0 and started then
        refreshStart()
    end
    if player_color == 'Grey' then
        return
    end
    params = {}
    params["SteamID"] = Player[player_color].steam_id
    params["PlayerName"] = Player[player_color].steam_name
    registerPlayer(params)
end

function onChat(message, player)
    local args = {} -- The arguments following a command
    local command

    for i in string.gmatch(message, "%S+") do
            args[#args + 1] = i
    end
    command = string.lower(args[1])

    if command == '!lu' then
        if args[2] == nil then
            player.broadcast('Please enter a name.', {1,0,0})
            return false
        end
        local key = findPlayer(args[2])
        if key == nil then
            player.broadcast('Player not found.', {1,0,0})
        else
            lookupMenu()
            displayPlayerStats(key)
        end
        return false
    end
end

function moveBoard()
    local tab = getAllObjects()
    local foundTab = {}
    for _, v in pairs(tab) do
        if string.match(v.getName(), "Scoreboard") then
            table.insert(foundTab,1,v)
        end
    end
    self.setPositionSmooth({START_POS['x']  + (#foundTab-1) * 30, START_POS['y'], START_POS['z']})
    self.setLock(true)
end



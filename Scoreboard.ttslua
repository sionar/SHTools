broadcastToAll(message, stringColorToRGB("White"))
broadcastToAll("-----------------------", stringColorToRGB("Red"))
broadcastToAll("-----------------------", stringColorToRGB("Red"))
broadcastToAll("", stringColorToRGB("White"))
broadcastToAll("", stringColorToRGB("White"))
end

function hasValue(tab, val)

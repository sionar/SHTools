function annMessage(req)
    if(req.is_done == false) then
    return
    end

    if(req.is_error) then
    return
    end

    jsonRes = JSON.decode(req.text)
    if(jsonRes["ID"] == "") then -- No message set
    return
    end

    if(jsonRes["ID"] == lastAMID or jsonRes["ID"] == tostring(lastAMID)) then -- No NEW message set
    return
    end

    lastAMID = jsonRes["ID"]
    printAnnouncement(jsonRes["Message"])
end


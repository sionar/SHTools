function updateRatings(winner)
    local players = getSeatedPlayers()
    local libTeam = {}
    local fasTeam = {}
    local libShare = {}
    local fasShare = {}
    local tLib, tFas = 0, 0
    local aLib, aFas, rLib, rFas, eLib, eFas, sLib, sFas
    roles = Global.getTable('roles')
    for _,v in pairs(players) do
        if roles[v] == 'liberal' then
            table.insert(libTeam, Player[v].steam_id)
        else
            table.insert(fasTeam, Player[v].steam_id)
        end
    end
    for _,v in pairs(libTeam) do
        tLib = tLib + db[v].lr
    end
    for _,v in pairs(libTeam) do
        libShare[v] = db[v].lr / tLib
    end
    for _,v in pairs(fasTeam) do
        tFas = tFas + db[v].fr
    end
    for _,v in pairs(fasTeam) do
        fasShare[v] = db[v].fr / tFas
    end
    aLib = tLib/#libTeam
    aFas = tFas/#fasTeam
    rLib = math.pow(10,(aLib/400))
    rFas = math.pow(10,(aFas/400))
    eLib = rLib / (rLib + rFas)
    eFas = 1 - eLib
    if winner == 'lib' then
        sLib = 1
        sFas = 0
    else
        sLib = 0
        sFas = 1
    end
    tLib = tLib + 200 * (sLib - eLib)
    tFas = tFas + 200 * (sFas - eFas)
    for _,v in pairs(libTeam) do
        db[v].lr = round(tLib * libShare[v])
    end
    for _,v in pairs(fasTeam) do
        db[v].fr = round(tFas * fasShare[v])
    end
end

function checkValid(obj, player)
    local started = Global.getVar('started')
    local players = getSeatedPlayers()
    local currTime = os.time()

    if not started then
        broadcastToColor("Game not started.", player, {1,0,0})
        return false
    elseif recordCheck then
        broadcastToColor("Game already recorded for this session.", player, {1,0,0})
        return false
    elseif #players < 5 then
        broadcastToColor("Not enough players seated", player, {1,0,0})
        return false
    elseif currTime - startTime < 120 then
        broadcastToColor("Please wait a couple of minutes before submitting.", player, {1,0,0})
        return false
    else
        recordCheck = true
        return true
    end
end


X_WIDTH = 10
Z_WIDTH = 6
X_SEG_LENGTH = -1 * X_RADIUS / (X_WIDTH / 2)
Z_SEG_LENGTH = Z_RADIUS / (Z_WIDTH / 2)
X_C = {}
Z_C = {}
for i = 1, X_WIDTH + 1 do
	X_C[i] = X_RADIUS + X_SEG_LENGTH * (i-1)
end
for i = 1, Z_WIDTH + 1 do
	Z_C[i] = Z_RADIUS - Z_SEG_LENGTH * (i-1)
end

